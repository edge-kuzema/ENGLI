
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel">
        <div class="panel-body">
          <div class="col-sm-4">
<h2>Log in</h2>
<%= form_for(resource, as: resource_name, class: 'new_user', url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control',autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
    </div>

    <div class="field">
    <% if devise_mapping.rememberable? %>
        <div style="margin-left: 20px " class="checkbox">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me %>
        </div>
    <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-input-default' %>
      <%= render "devise/shared/links" %>
    </div>
<% end %>
</div>
</div>
</div>
</div>
</div>
</div>